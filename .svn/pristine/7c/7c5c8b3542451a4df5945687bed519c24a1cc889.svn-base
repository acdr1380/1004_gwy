@import "app/styles/layout";
@import "app/styles/drawer";
$browser-default-font-size: 16px !default; //变量的值可以根据自己需求定义

@function pxTorem($px) {
    @return $px / $browser-default-font-size * 1rem;
}

.layout {
    height: 100%;
    background-color: #fff;
    overflow: auto;
    position: relative;

    .content {
        padding: pxTorem(10px);

        .item {
            margin-bottom: 5px;
        }
    }
}

.unit-select {
    top: pxTorem(55px);

    .handler {
        position: sticky;
        top: 0;
        padding: 5px 20px;
        border-bottom: 1px solid #eee;
    }

    .tree {
        height: calc(100% - 50px);
        overflow: auto;
    }
}
._tree_view {
    height: 100%;
}
