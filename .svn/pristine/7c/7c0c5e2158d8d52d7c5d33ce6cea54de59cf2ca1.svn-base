// 左边宽度
$leftwidth: 280px;

.layout {
    height: 100%;
    position: relative;

    .search-result {
        top: 30px;

        & > div {
            background-color: #fff;
            overflow: auto;
        }

        .left-tree {
            width: $leftwidth;
            right: auto;
        }

        .right-table {
            left: $leftwidth + 10px;
            padding: 10px;
            border-left: 10px solid #eee;
        }
    }
}

.position_0 {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
}

.title_text {
    background-color: #eee;
    height: 30px;
}
