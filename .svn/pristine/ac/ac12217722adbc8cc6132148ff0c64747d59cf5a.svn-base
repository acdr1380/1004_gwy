/*导入布局样式*/
@import 'src/app/styles/layout';
:host ::ng-deep {
    .ant-table-small.ant-table-bordered .ant-table-content {
        border-right: none;
    }
    .ant-table-small {
        border: none;
        border-bottom: 1px solid #e8e8e8;
    }
    .ant-tabs-bar {
        border-bottom: none;
    }
}
.container {
    justify-content: center;
    padding: 10px 10px;
    .salary-main {
        width: 100%;
        // min-width: 800px;
        border: 1px solid #e8e8e8;
        overflow: hidden;
        & > .salary-tab {
            height: 50px;
            line-height: 50px;
            border-bottom: solid 1px #e8e8e8;
        }

        & > .salary-content {
            overflow: hidden;
            overflow-y: auto;
            border-bottom: solid 1px #e8e8e8;
        }
        // 人员子集
        .salary-person-child {
            height: 300px;
        }
        .salary-person-gz {
            height: calc(100% - 300px - 80px - 4px);
        }
    }
}

.salary-table {
    table-layout: auto;
    width: 100%;
    margin-bottom: 10px;
    table {
        width: 100%;
        border-collapse: collapse;
        tr {
            height: 26px;
            line-height: 26px;
            border-bottom: 1px solid #e8e8e8;
            th {
                width: 16.6%;
                padding: 5px 10px;
                color: #000;
                text-align: center;
                font-weight: bold;
                border-right: 1px solid #e8e8e8;
                background-color: #fafafa;
            }
            td {
                width: 16.6%;
                padding: 5px 10px;
                text-align: center;
                border-right: 1px solid #e8e8e8;
                b {
                    float: left;
                }
            }
            td:last-child {
                border-right: none;
            }
            td.border-td {
                border-right: 1px solid #e8e8e8;
            }
        }
    }
}

.empty {
    padding: 18px;
}

nz-table {
    border: none;
}
