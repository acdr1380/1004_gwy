/*导入布局样式*/
@import 'src/app/styles/_layout';
@import 'src/app/styles/_drawer';

/*业务布局*/
.layout {
    height: 100%;
    position: relative;
    overflow: hidden;
    overflow-y: auto;
    background-color: #f0f2f5;

    .oper {
        margin-bottom: 10px;
        margin: 0 -5px;

        &:after {
            content: '';
            display: table;
            clear: both;
        }

        .item {
            min-width: 270px;
            width: 25%;
            float: left;
            color: #fff;

            padding: 10px;

            .content {
                height: 125px;
                transition: all 0.3s ease-in-out;
                cursor: pointer;
                border-radius: 5px;

                .title {
                    font-size: 18px;
                    padding: 15px 20px 0 20px;
                }

                .msg {
                    margin-left: 20px;
                }

                .desc {
                    padding: 0 20px;
                    font-size: 14px;
                    line-height: 1.3;
                    margin-top: 10px;
                }

                .icon {
                    font-size: 30px;
                    color: #fff;
                    padding-left: 20px;

                    .count {
                        float: right;
                        margin-right: 20px;
                        font-size: 40px;
                        margin-top: -5px;
                    }
                }

                &:hover {
                    box-shadow: 0px 10px 25px -10px #9e9c9e;
                }
            }
        }
    }

    .channel {
        & > .item {
            float: left;
            padding: 5px;

            &.height_50 {
                height: 388px;
            }
        }

        &:after {
            clear: both;
            content: '';
            display: table;
        }
    }
}
