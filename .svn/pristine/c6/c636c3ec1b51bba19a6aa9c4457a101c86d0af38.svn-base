.layout {
    height: 100vh;
    width: 100vw;
    background: #44adfe url(/assets/images/login/login.bg.jpg) no-repeat;
    background-size: 100% 100%;
    overflow: hidden;
    position: relative;

    .anquan {
        position: absolute;
        z-index: 2;
        top: 50%;
        left: 50%;
        font-size: 45px;
        transform: translate(-50%, -50%);
        background: url(/assets/images/login/anquan.png) no-repeat 50%;
        width: 100%;
        height: 100%;
    }

    .liuxing {
        width: 85px;
        height: 85px;
        position: absolute;
        background: url(data:image/png;base64,)
            no-repeat;
        background-size: contain;
    }

    .liuxing1 {
        top: 200px;
        left: 200px;
    }

    .liuxingFla1 {
        animation: liuxing1 5s ease-in infinite;
    }

    .liuxingFla2 {
        animation: liuxing2 4s ease-in infinite;
    }

    .liuxing2 {
        top: 200px;
        left: 50%;
        margin-left: 200px;
    }

    .liuxingFla3 {
        animation: liuxing3 3s linear infinite;
    }
    .liuxing3 {
        top: 100px;
        right: 300px;
    }

    .liuxingFla4 {
        animation: liuxing4 2s linear infinite;
    }
    .liuxing4 {
        top: 150px;
        right: 300px;
    }

    .top_logo {
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -260px;
        font-size: 38px;
        transform: translate(-50%);
        line-height: 48px;
        color: #fff;
        font-weight: 600;
        letter-spacing: 3px;
        width: 580px !important;
        text-align: center;
        z-index: 55;

        .logo_pic {
            display: block;
            text-align: center;
            margin: 0 auto 10px;
            width: 90px;
            height: 90px;
            background: url(/assets/images/login/logo1.png) no-repeat 50%;
        }
    }

    .login-form {
        position: absolute;
        width: 480px;
        left: 50%;
        top: 50%;
        margin-top: -120px;
        transform: translate(-50%);
        background-color: rgba(240, 246, 249, 0);
        max-width: 100%;
        z-index: 88;
        padding: 60px 65px;
        overflow: hidden;
        border-radius: 8px;

        .form-group {
            border: 1px solid #5eb4e0;
            background: #0b3fb5;
            border-radius: 5px;
            color: #fff;

            margin-bottom: 22px;
            position: relative;

            i.fa {
                position: absolute;
                left: 15px;
                top: 11px;
                margin: auto;
                font-size: 22px;

                &.fa-eye,
                &.fa-eye-slash {
                    top: 15px;
                    right: 10px;
                    left: auto;
                    font-size: 18px;
                    cursor: pointer;
                }
            }
        }

        .form-control {
            color: #f2ecec;
            caret-color: #fdf9f9;
            background-color: rgba(10, 99, 176, 0.04) !important;

            border: 0;
            border-radius: 0;
            padding: 0 5px 0 15px;
            height: 46px;
            line-height: 30px;
            font-size: 16px;
            width: 85%;
            margin-left: 8%;
        }

        .btn-default {
            color: #fff;
            background-color: #0b3fb5;
            border-color: #6ab8e1;
            font-size: 18px;
            border-radius: 4px;
            width: 100%;
            height: 48px;
            line-height: 48px;
            text-align: center;
            border: 1px solid #dcdfe6;
            display: inline-block;
            line-height: 1;
            white-space: nowrap;
            cursor: pointer;

            &:hover {
                background-color: #0743cf;
            }
        }
    }
}

input:-internal-autofill-selected {
    background-color: transparent !important;
}
input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0 1000px #0b3fb5 inset !important;
    box-shadow: inset 0 0 0 1000px #0b3fb5 !important;
    -webkit-text-fill-color: #fff !important;
}

.version {
    position: absolute;
    bottom: 5px;
    right: 5px;
    color: #eee;
    font-size: 12px;
}

@keyframes liuxing1 {
    0% {
        -webkit-transform: translate(200px, -200px);
        transform: translate(200px, -200px);
    }

    90% {
        -webkit-transform: translate(-180px, 180px);
        transform: translate(-180px, 180px);
        opacity: 1;
    }

    to {
        -webkit-transform: translate(-200px, 200px);
        transform: translate(-200px, 200px);
        opacity: 0;
    }
}

@keyframes liuxing2 {
    0% {
        -webkit-transform: translate(200px, -200px);
        transform: translate(200px, -200px);
    }

    90% {
        -webkit-transform: translate(-480px, 480px);
        transform: translate(-480px, 480px);
        opacity: 1;
    }

    to {
        -webkit-transform: translate(-500px, 500px);
        transform: translate(-500px, 500px);
        opacity: 0;
    }
}

@keyframes liuxing3 {
    0% {
        -webkit-transform: translate(200px, -200px);
        transform: translate(200px, -200px);
    }

    90% {
        -webkit-transform: translate(-480px, 480px);
        transform: translate(-480px, 480px);
        opacity: 1;
    }

    to {
        -webkit-transform: translate(-500px, 500px);
        transform: translate(-500px, 500px);
        opacity: 0;
    }
}

@keyframes liuxing4 {
    0% {
        -webkit-transform: translate(200px, -200px);
        transform: translate(200px, -200px);
    }

    90% {
        -webkit-transform: translate(-180px, 180px);
        transform: translate(-180px, 180px);
        opacity: 1;
    }

    to {
        -webkit-transform: translate(-200px, 200px);
        transform: translate(-200px, 200px);
        opacity: 0;
    }
}
