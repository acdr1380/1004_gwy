@import "src/app/styles/layout";
@import "src/app/styles/drawer";

.full_screen {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    z-index: 99;
}

.tbl {
    padding: 10px;

    td {
        input {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            width: 100%;
            margin: auto;
            border: none;
            // padding: 0 8px;
        }
        &.edit {
            background-color: #fff;
            cursor: pointer;
        }
    }
}

:host ::ng-deep {
    .ant-table {
        .col_width_format {
            visibility: collapse;
        }
        tr {
            th,
            td {
                padding: 8px 0px !important;
            }
        }
        .ant-table-tbody {
            tr {
                th {
                    padding: 8px 0px !important;
                }
                td {
                    background-color: #f5f5f5;
                }
                td.edit {
                    position: relative;
                    padding: 0 !important;
                }
                td.code-input {
                    input {
                        border: 0 !important;
                    }
                }
            }
        }
    }
}
.code-input {
    background-color: #fff !important;
}
.add-retire {
    position: relative;
    padding: 0 !important;
    input {
        border: 0 !important;
    }
}
::ng-deep {
    .edit {
        dictionary-input {
            input {
                border: none !important;
            }
        }
    }
}

.oper_step_flow {
    height: 120px;
    padding: 40px 10px 0 10px;
    margin: 20px;
    background-color: #f0f8ff;
    border: 1px solid #cce8ff;
}
