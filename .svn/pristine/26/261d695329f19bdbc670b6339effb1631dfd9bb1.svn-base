<nz-drawer
    nzPlacement="right"
    [nzNoAnimation]="true"
    [nzVisible]="operSalaryInfoDrawerIfy.visible"
    [nzWidth]="operSalaryInfoDrawerIfy.width"
    [nzTitle]="operSalaryInfoDrawerIfy.title"
    (nzOnClose)="operSalaryInfoDrawerIfy.close()"
>
    <div class="drawer_area">
        <div class="container salary_view">
            <oper-salary-info [params]="params"></oper-salary-info>
        </div>
    </div>
</nz-drawer>
