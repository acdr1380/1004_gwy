/* You can add global styles to this file, and also import other style files */
// 引入图标库
@import '~font-awesome/css/font-awesome.css';
@import '~cropperjs/dist/cropper.css';

@import '~@angular/cdk/overlay-prebuilt.css';

* {
    outline: none;
}

html,
body {
    overflow: hidden;
}
.view {
    height: 100%;
    width: 100%;
}
.view_scroll {
    height: 100%;
    width: 100%;
    overflow: auto;
}

@media print {
    .print_lyt {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: auto;
        z-index: 1999;
        background-color: #fff;
        height: auto !important;
    }
}
@page {
    size: auto;
    /* auto is the initial value */
    // margin: 0mm;
    /* this affects the margin in the printer settings */
}

// tinymce 富文本框提示试用版
.tox-notification {
    display: none !important;
}

.ant-drawer-content {
    overflow: hidden;
    .ant-drawer-header {
        height: 55px;
        // background-color: #3c5b91 !important;
        // border-color: #3c5b91;
        border-radius: 0;

        // .ant-drawer-title {
        //     color: #fff;
