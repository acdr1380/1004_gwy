        // .ant-drawer-close {
        //     i {
        //         color: #fff;
        //     }
        // }
    }
}
// nz 表格框架样式
nz-table {
    .ant-table-small {
        border-radius: 0;

        .ant-table-content {
            tbody {
                margin: 0;
            }
        }
    }
    thead {
        th {
            background-color: #f0fbff !important;

            font-weight: bold !important;
            color: #000 !important;
        }
    }

    // tbody {
    //     tr:nth-child(even) {
    //         td {
    //             background-color: #fafafa;
    //         }
    //     }
    // }
    // 选中行
    .ant-table tbody tr,
    .ant-table tbody tr:hover {
        &.active td {
            background-color: #e6ffea !important;
        }
    }
}
.ant-dropdown {
    top: 0 !important;
    .ant-table-filter-dropdown {
        max-height: 300px;
        overflow: auto;
        position: relative;

        .ant-table-filter-dropdown-btns {
            position: sticky;
            bottom: 0;
            background: #fff;
        }
    }
}
// form 项
.ant-form-item-children {
    display: inherit;
}

.ant-input[disabled] {
    color: #838383;
}

// nz树节点样式
.custom-node {
    cursor: pointer;
    // line-height: 24px;
    // margin-left: 4px;
    display: inline-block;
    // padding: 0 5px;
    outline: none;

    &.disabled {
        color: #aaa;
    }

    &.active {
        background: #bae7ff;
        // color: #fff;
    }

    .node-text {
        padding-left: 5px;
    }

    .selected-level {
        background-color: #f9ac1d;
        color: #fff;
        margin-left: 5px;
        padding: 0px 5px 1px;
        border-radius: 2px;
        font-size: 12px;
    }
}

/*滚动条*/

::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}

::-webkit-scrollbar-track {
    background: 0 0;
}

::-webkit-scrollbar-thumb {
    background-color: #ccc;
}

::-webkit-scrollbar-thumb:hover {
    background-color: rgb(139, 138, 138);
}

::-webkit-scrollbar-corner {
    background-color: #535353;
}

::-webkit-scrollbar-resizer {
    background-color: #ff6e00;
}
