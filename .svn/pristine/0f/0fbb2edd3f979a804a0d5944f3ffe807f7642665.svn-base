@import 'src/app/styles/drawer';
.layout {
    padding: 10px;
    width: 100%;
    height: 100%;
    overflow: auto;
    .container {
        display: flex;
        flex-wrap: wrap;
        .empty {
            height: 150px;
            border: 1px solid #e8e8e8;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .card {
            width: calc(100% / 4 - 10px);
            margin-right: 10px;
            margin-top: 16px;
            cursor: pointer;
            .card-message {
                color: #000;
            }
            .text-over {
                width: 100%;
                overflow: hidden;
                white-space: nowrap;
                text-overflow: ellipsis;
                color: rgba($color: #000000, $alpha: 0.65);
            }
        }
        .portrait {
            width: 50px;
            height: 50px;
            border-radius: 50px;
            background-color: rgb(102, 181, 255);
            display: flex;
            justify-content: center;
            align-items: center;
        }
    }
}

:host ::ng-deep {
    ul.ant-card-actions {
        background-color: #fff !important;
    }
}
.drawer_area {
    .footer {
        button {
            margin-right: 10px;
        }
    }
}
.select {
    background-color: #000;
}
