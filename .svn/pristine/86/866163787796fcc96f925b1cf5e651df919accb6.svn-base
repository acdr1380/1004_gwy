/*导入布局样式*/
@import 'src/app/styles/layout';
@import 'src/app/styles/drawer';

.dictionary {
    height: auto;

    .putt {
        background-color: #fdffdc;

        &[disabled] {
            background-color: #f5f5f5;
        }
    }
}

.dic_selector {
    .container {
        padding: 5px;
    }

    .dic_status {
        .often_use {
            height: 100%;
            width: 100%;

            .item {
                height: 32px;
                line-height: 32px;
                cursor: pointer;
                padding: 0 10px;
                margin: 0;
                white-space: nowrap;
                text-overflow: ellipsis;
                overflow: hidden;

                &:hover {
                    background-color: #e4e1f3;
                }
            }
        }

        .dictionary_tree {
            height: 100%;
            width: 100%;
        }
    }

    .footer {
        .right {
            float: right;
        }
    }
}

:host ::ng-deep {
    .ant-drawer-title {
        margin-right: 10px;
    }
}
