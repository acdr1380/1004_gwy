                data: { wfName: '岗位变动工资业务' },
            },
            {
                path: 'salary_define_level',
                loadChildren: () =>
                    import('./salary-define-level/salary-define-level.module').then(
                        m => m.SalaryDefineLevelModule
                    ),
                data: { wfName: '转正定级工资业务' },
            },
            {
                path: 'salary_education_change',
                loadChildren: () =>
