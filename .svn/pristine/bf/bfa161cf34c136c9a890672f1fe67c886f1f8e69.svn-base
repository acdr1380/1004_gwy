<div class="layout">
    <!-- 搜索框面板 -->
    <div class="search">
        <!-- 搜索框 -->
        <div>
            <div class="putt-query">
                <ng-template #tagPlaceHolder let-selectedList>
                    and {{ selectedList.length }} more selected
                </ng-template>
                <div class="input-entering">
                    <div>
                        <nz-select
                            [nzMaxTagCount]="3"
                            [nzMaxTagPlaceholder]="tagPlaceHolder"
                            nzMode="multiple"
                            style="width: 280px; position: relative; right: -5px"
                            nzPlaceHolder="请选择"
                            [(ngModel)]="checkOptionsModel"
                        >
                            <!-- <nz-option nzLabel="全部" [nzValue]="0"> </nz-option> -->
                            <nz-option
                                *ngFor="let option of checkOptionsOne"
                                [nzLabel]="option.label"
                                [nzValue]="option.value"
                                nzCustomContent
                            >
                                <span style="margin-left: 20px">{{ option.label }}</span>
                            </nz-option>
                        </nz-select>
                    </div>
                    <nz-input-group nzSearch [nzAddOnAfter]="suffixIconSearch">
                        <input
                            type="text"
                            nz-input
                            style="border-radius: 0"
                            placeholder="请输入搜索内容"
                            [(ngModel)]="queryString"
                            (keydown)="eventKeyDown($event)"
                        />
                    </nz-input-group>

                    <ng-template #suffixIconSearch>
                        <button nz-button nzType="primary" nzSearch (click)="staffSearch()">
                            <i nz-icon nzType="search"></i>
                        </button>
                    </ng-template>
                </div>
            </div>

            <!-- 频繁搜索内容 -->
            <div class="frequently-query-keyword">
                <span style="color: red; font-size: 18px">热搜：</span>
                <ng-container *ngFor="let item of keywordList">
                    <a (click)="eventQueryHistory(item)" class="title">{{ item.keyword }}</a>
                </ng-container>
            </div>
        </div>
    </div>

    <div class="route-page">
        <router-outlet></router-outlet>
    </div>
</div>
