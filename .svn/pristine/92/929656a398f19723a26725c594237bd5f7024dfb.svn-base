@import "src/app/styles/layout";
@import "src/app/styles/drawer";

.layout {
    & > .header {
        & > .left {
            display: inline-block;
        }
    }
    & > .container {
        & > .left {
            width: 200px !important;
            & > .find-select {
                padding: 0 10px;
                button {
                    margin-left: 10px;
                }
            }
        }
    }
}

// 人员列表
.audit_list {
    $item-height: 40px;
    width: 100%;

    .item {
        height: $item-height;
        line-height: $item-height;
        border-bottom: 1px solid #eee;

        display: flex;
        align-items: center;

        &:before {
            content: "";
            display: inline-block;
            width: 3px;
            height: $item-height;
        }
        &:hover {
            color: #1890ff;
        }

        &.active {
            background-color: #e6f7ff;

            &:before {
                background-color: #1890ff;
            }
        }

        & > .icon {
            width: 30px;
            padding: 0 10px;

            & .fa {
                margin-right: 5px;
            }

            & .fa.error {
                color: #ff4d4f;
            }

            & .fa.succeed {
                color: #52c41a;
            }

            & .fa.stateless {
                color: #1890ff;
            }
        }

        & > .title {
            flex: 1;
            cursor: pointer;
            padding: 0 10px;
            height: $item-height;
        }

        & > .btns {
            .btn {
                padding: 0 10px;
                // border-left: 1px solid #eee;
                color: #40a9ff;
                cursor: pointer;
            }
        }
    }
}

.person_data {
    height: 100%;
    width: 100%;
    padding: 10px;
}

.batch_audit {
    text-align: right;
    margin: 0 10px;
    width: 100%;
    & > button {
        width: 100%;
    }
}

// 人员审批
.person_audit_list {
    color: #000;

    .item {
        padding-bottom: 10px;
        margin-bottom: 10px;
        border-bottom: 1px solid #eee;

        .a_info {
            span {
                margin-right: 10px;
            }
        }
    }
}

.oper_step_flow {
    height: 120px;
    padding: 40px 10px 0 10px;
    margin: 20px;

    background-color: #f0f8ff;
    border: 1px solid #cce8ff;
}

.full_screen {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    z-index: 99;
}
