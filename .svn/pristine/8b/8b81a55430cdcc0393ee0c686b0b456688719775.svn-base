<div class="layout main_lyt">
    <div class="header">
        <!-- <div class="sidebar-logo">
            <img src="assets/images/client/logo-pic.png" alt="logo" />
        </div> -->

        <div class="project-title">
            <p class="title">{{ projectName }}</p>
            <!-- <p class="sub-title">{{ projectNameSign }}</p> -->
        </div>

        <div class="right">
            <div class="user-unit">
                <i class="fa fa-user-circle-o"></i>
                {{ userInfo?.unitName }} - {{ userInfo?.username }}
            </div>
            <div class="bell core">
                <i class="trigger" nz-icon nzType="bell"></i>
            </div>
            <div class="setting core">
                <i class="trigger" nz-icon nzType="setting"></i>
            </div>
            <div class="user-logout core" (click)="evtLogout()">
                <i class="trigger" nz-icon nzType="close-circle"></i>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="view portal_centent">
            <div class="box1">
                <ng-template [ngTemplateOutlet]="basicsManageTemplate"></ng-template>
            </div>
            <div class="box2">
                <ng-template [ngTemplateOutlet]="teamConditionTemplate"></ng-template>
            </div>
            <div class="box3">
                <ng-template [ngTemplateOutlet]="operModuleTemplate"></ng-template>
            </div>
            <div class="box4">
                <ng-template [ngTemplateOutlet]="reportStatisticsTemplate"></ng-template>
            </div>
            <div class="box5">
                <ng-template [ngTemplateOutlet]="policyLawsTemplate"></ng-template>
            </div>
            <div class="box6">
                <ng-template [ngTemplateOutlet]="queryUseTemplate"></ng-template>
            </div>
        </div>
    </div>
</div>

<!-- 基础管理 -->
<ng-template #basicsManageTemplate>
    <div class="gl_card">
        <div class="header">
            <div class="title">基础管理</div>
        </div>
        <div class="container">
            <div class="view base_manage_content">
                <ng-container *ngFor="let item of baseManagerIfy.list; let i = index">
                    <div class="menu" (click)="baseManagerIfy.into(item)">
                        <div class="bm_content">
                            <div class="icon" [attr.bmi]="i">
                                <i class="trigger" nz-icon [nzType]="item.icon"></i>
                            </div>
                            <div class="label">{{ item.label }}</div>
                        </div>
                    </div>
                </ng-container>
            </div>
        </div>
    </div>
</ng-template>

<!-- 队伍情况 -->
<ng-template #teamConditionTemplate>
    <div class="gl_card">
        <div class="header">
            <div class="title">队伍情况</div>
        </div>
        <div class="container">
            <div class="view team_condition_content">
                <div class="tc_row top">
                    <div class="tc_item">
                        <div class="tc_cont">
                            <div class="label">公务员总数(人)</div>
                            <div class="count">1110</div>
                        </div>
                    </div>
                    <div class="tc_item">
                        <div class="tc_cont">
                            <div class="label">领导职务(人)</div>
                            <div class="count">109</div>
                        </div>
                    </div>
                    <div class="tc_item">
                        <div class="tc_cont">
                            <div class="label">综合管理类职级(人)</div>
                            <div class="count">17</div>
                        </div>
                    </div>
                    <div class="tc_item">
                        <div class="tc_cont">
                            <div class="label">兼任职级(人)</div>
                            <div class="count">1</div>
                        </div>
                    </div>
                </div>
                <div class="cent">
                    <div class="type_name">职级情况</div>
                    <div class="tc_row">
                        <div class="tc_item">
                            <div class="tc_cont">
                                <div class="label">巡视员(-12级)(人)</div>
                                <div class="count">36</div>
                            </div>
                        </div>
                        <div class="tc_item">
                            <div class="tc_cont">
                                <div class="label">调研员(1-4级)(人)</div>
                                <div class="count">99</div>
                            </div>
                        </div>
                        <div class="tc_item">
                            <div class="tc_cont">
                                <div class="label">主任科员(1-4级)(人)</div>
                                <div class="count">1</div>
                            </div>
                        </div>
                        <div class="tc_item">
                            <div class="tc_cont">
                                <div class="label">科员(1-2级)(人)</div>
                                <div class="count">22</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="fot">
                    <div class="type_name">年龄情况</div>

                    <div class="tc_row">
                        <div class="tc_item">
                            <div class="tc_cont">
                                <div class="label">32岁及以下(人)</div>
                                <div class="count">35</div>
                            </div>
                        </div>
                        <div class="tc_item">
                            <div class="tc_cont">
                                <div class="label">36岁-45岁(人)</div>
                                <div class="count">89654</div>
                            </div>
                        </div>
                        <div class="tc_item">
                            <div class="tc_cont">
                                <div class="label">46岁-55岁(人)</div>
                                <div class="count">69531</div>
                            </div>
                        </div>
                        <div class="tc_item">
                            <div class="tc_cont">
                                <div class="label">56岁及以上(人)</div>
                                <div class="count">8956</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</ng-template>

<!-- 业务模块 -->
<ng-template #operModuleTemplate>
    <div class="gl_card">
        <div class="header">
            <div class="title">业务模块</div>
        </div>
        <div class="container">
            <div class="view oper_module_content">
                <ng-container *ngFor="let item of operModuleIfy.list">
                    <div class="om_item">
                        <div class="om_content">
                            <div class="icon">
                                <img [src]="operModuleIfy.getIconURL(item)" />
                            </div>
                            <div class="label">{{ item.label }}</div>
                        </div>
                    </div>
                </ng-container>
                <!-- <div class="om_item">
                    <div class="icon">
                        <img src="assets/images/portal/更多模块.png" />
                    </div>
                    <div class="label">更多模块</div>
                </div> -->
            </div>
        </div>
    </div>
</ng-template>

<!-- 年报统计 -->
<ng-template #reportStatisticsTemplate>
    <div class="gl_card">
        <div class="header">
            <div class="title">年报统计</div>
        </div>
        <div class="container">
            <div class="view report_statistics">
                <div class="m_item s1">
                    <div class="title">统计专用信息管理</div>
                    <img src="assets/images/portal/统计专用信息管理.png" />
                </div>
                <div class="m_item s2">
                    <div class="title">公务员统计系统</div>
                    <img src="assets/images/portal/公务员统计系统.png" />
                </div>
            </div>
        </div>
    </div>
</ng-template>

<!-- 政策法规 -->
<ng-template #policyLawsTemplate>
    <div class="gl_card">
        <div class="header">
            <div class="title">政策法规</div>
        </div>
        <div class="container">
            <div class="view_scroll policy_laws_content">
                <ng-container *ngFor="let item of policyLawsIfy.list">
                    <div class="pl_item">
                        <div class="year">{{ item.year }}年</div>
                        <div class="list">
                            <ng-container *ngFor="let file of item.list">
                                <div class="file">
                                    <div class="title">{{ file.title }}</div>
                                    <div class="date">{{ file.date | date: 'yyyy-MM-dd' }}</div>
                                    <div class="type">
                                        <i class="trigger" nz-icon nzType="file-word"></i>
                                        <i class="trigger" nz-icon nzType="file-pdf"></i>
                                    </div>
                                </div>
                            </ng-container>
                        </div>
                    </div>
                </ng-container>
            </div>
        </div>
    </div>
</ng-template>

<!-- 查询应用 -->
<ng-template #queryUseTemplate>
    <div class="gl_card">
        <div class="header">
            <div class="title">查询应用</div>
        </div>
        <div class="container">
            <div class="view query_use">
                <div class="q_item">
                    <div class="q_content">
                        <div class="icon">
                            <img src="assets/images/portal/综合查询.png" />
                        </div>
                        <div class="title">综合查询</div>
                    </div>
                </div>
                <div class="q_item">
                    <div class="q_content">
                        <div class="icon">
                            <img src="assets/images/portal/统计分析.png" />
                        </div>
                        <div class="title">统计分析</div>
                    </div>
                </div>
                <div class="q_item">
                    <div class="q_content">
                        <div class="icon">
                            <img src="assets/images/portal/工资测算.png" />
                        </div>
                        <div class="title">工资测算</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</ng-template>
