/*导入布局样式*/
@import "src/app/styles/layout";
@import "src/app/styles/drawer";

// 表格组件样式重写，隐藏无数据内容框
::ng-deep .ledger-tbl .ant-table-placeholder {
    display: none;
}

// 开始布局
.layout {
    .btn-wrapper {
        padding: 0;

        .org-select-wrap {
            display: flex;
            align-items: center;
            height: 100%;

            & > * {
                margin-right: 10px;
            }
        }

        .label-item {
            margin-right: 10px;
            font-weight: bold;
        }
    }

    .check-wrapper {
        flex-direction: column;

        .check-list {
            display: flex;
            flex: 1;
            width: 100%;
            height: 100%;

            .table-wrap {
                width: 100%;
                flex-grow: 1;
            }
        }

        .check-details {
            width: 100%;
            height: 40%;
            overflow: auto;

            .edit-col {
                a {
                    margin-right: 10px;
                }
            }
        }
    }
}

// 添加记录抽屉
.add-record-wrapper {
    .container > .right-main {
        overflow: auto;
    }
}
