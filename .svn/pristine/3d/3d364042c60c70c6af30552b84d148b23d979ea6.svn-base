@import 'src/app/styles/drawer';


.org_flex{
    display: flex;
    flex-direction: row;
    margin-bottom: 10px;
    .org_flex_item{
        flex: 1;
        border: solid 1px #d9d9d9;
        margin: 0 5px;
        .org_flex_title{
            width: 100%;
            height: 45px;
            line-height: 45px;
            font-size: 16px;
            font-weight: bold;
            padding: 0 10px;
            border-bottom: solid 1px #d9d9d9;
        }
        .org_flex_content{
            padding: 10px;
        }
    }
}

nz-input-number{
    margin-right: 10px;
}