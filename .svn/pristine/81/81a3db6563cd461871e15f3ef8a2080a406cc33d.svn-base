@import 'src/app/styles/drawer';
.footer {
    div {
        float: right;
        button {
            margin-left: 10px;
        }
    }
}
.calculation {
    height: 50px;
    background-color: #f0fbff;
    border: 1px solid rgb(232, 232, 232);
    border-bottom: 0;
    padding-right: 10px;
    & > div {
        width: 50%;
        height: 100%;
        float: right;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
}
.edit_tbl {
    tr {
        th,
        td {
            padding: 8px 0px !important;
        }
        td {
            background-color: #f5f5f5;
        }
        th.edit,
        td.edit {
            position: relative;
            background-color: #fff;
            input {
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                width: 100%;
                margin: auto;
                border: none;
                // padding: 0 8px;
            }
        }
    }
}

::ng-deep {
    .edit {
        dictionary-input {
            input {
                border: none !important;
            }
        }
    }
}
