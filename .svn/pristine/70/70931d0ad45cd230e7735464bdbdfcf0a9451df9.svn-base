@import 'src/app/styles/layout';
@import 'src/app/styles/drawer';

.tbl {
    padding: 10px;
}
.drawer_area {
    .edit_all {
        padding: 0;
        padding-top: 1px;

        .layout {
            .left {
                width: 220px;
            }
            .view_scroll {
                padding: 10px 20px;

                .edit_all_item {
                    height: 30px;
                    line-height: 30px;
                    padding: 0 10px;

                    &.active {
                        background-color: #e6ffea;
                    }
                }
            }
        }
    }
}
.oper_step_flow {
    height: 120px;
    padding: 40px 10px 0 10px;
    margin: 20px;

    background-color: #f0f8ff;
    border: 1px solid #cce8ff;
}

.full_screen {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    z-index: 99;
}

.table-container {
    overflow: auto !important;
}

// 人员列表
.audit_list {
    $item-height: 40px;

    width: 100%;

    .item {
        height: $item-height;
        line-height: $item-height;
        border-bottom: 1px solid #eee;

        display: flex;
        align-items: center;

        &:before {
            content: '';
            display: inline-block;
            width: 3px;
            height: $item-height;
        }
        &:hover {
            color: #1890ff;
        }

        &.active {
            background-color: #e6f7ff;

            &:before {
                background-color: #1890ff;
            }
        }

        & > .icon {
            width: 30px;
            padding: 0 10px;

            & .fa {
                margin-right: 5px;
            }

            & .fa.error {
                color: #ff4d4f;
            }

            & .fa.succeed {
                color: #52c41a;
            }

            & .fa.stateless {
                color: #1890ff;
            }
        }

        & > .title {
            flex: 1;
            cursor: pointer;
            padding: 0 10px;
        }

        & > .btns {
            .btn {
                padding: 0 10px;
                // border-left: 1px solid #eee;
                color: #40a9ff;
                cursor: pointer;
            }
        }
    }
}

.custom_table {
    table-layout: fixed;
    width: 100%;
    border: 1px solid #e8e8e8;

    &.readly {
        td {
            background-color: #fafafa;
        }
    }
    tr {
        border-bottom: 1px solid #e8e8e8;
        &.active {
            background-color: #e6f7ff;
            // color: #1890ff;
        }

        td {
            input {
                &.active {
                    background-color: #e6f7ff;
                    // color: #1890ff;
                }
            }
        }

        td,
        th {
            // padding: 12px 24px;
            padding: 8px 16px;
            text-align: center;
            border-right: 1px solid #e8e8e8;
        }

        td.value_readly {
            cursor: pointer;
        }

        .label {
            background-color: #fafafa;
            color: #000;
            font-weight: bold;
        }

        .value {
            position: relative;

            input {
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                width: 100%;
                margin: auto;
                border: none;
                padding: 0 16px;
            }
        }
    }
}
