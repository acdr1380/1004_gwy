@import 'src/app/styles/drawer';
$selectedItemHeight: 30px;

.layout {
    height: 100%;
    overflow: hidden;
    overflow-y: auto;

    .q_item {
        background-color: #fff;
    }

    .query_condition {
        .q_putt {
            padding-left: 14px;
            padding-top: 14px;
            height: 60px;
            border-bottom: 1px solid #eee;

            nz-input-group {
                max-width: 500px;
            }
        }

        .condition {
            .c_item {
                display: flex;
                padding: 8px 0;
                border-bottom: 1px solid #eee;

                .title {
                    width: 180px;
                    padding-left: 10px;
                    font-size: 14px;
                    color: #666666;
                    line-height: 32px;
                }

                .scope {
                    width: 100%;

                    &::after {
                        content: '';
                        display: table;
                        clear: both;
                    }

                    .link {
                        padding-left: 0;
                    }
                }
            }
        }

        .query_btn {
            display: flex;
            padding: 10px 0;

            .placeholder {
                width: 120px;
            }
        }
    }

    .query_result_condition {
        border: 10px solid rgb(240, 242, 245);
        border-left: 0;
        border-right: 0;
        padding: 10px;
        padding-top: inherit;
        display: flex;

        .title {
            width: 120px;
            line-height: 30px;
            margin-top: 10px;
        }

        .query_condition {
            width: 100%;

            .item {
                display: inline-block;
                border: 1px solid #ddd;
                padding-left: 10px;
                height: $selectedItemHeight;
                line-height: $selectedItemHeight;
                margin-right: 10px;
                margin-top: 10px;

                .close {
                    float: right;
                    width: $selectedItemHeight;
                    height: $selectedItemHeight - 2;
                    line-height: $selectedItemHeight - 2;
                    text-align: center;
                    margin-left: 10px;
                    color: #ddd;
                    border-left: 1px solid #eee;
                    padding-bottom: 2px;
                    cursor: pointer;

                    &:hover {
                        background-color: #eee;
                        color: #000;
                        border-color: #ddd;
                    }
                }
            }
        }
    }

    .query_table {
        margin-top: 10px;

        .handle {
            height: 50%;
            line-height: 50px;
            text-align: right;
            padding: 0 10px;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
            justify-content: space-between;
            div {
                margin-right: 10px;
            }
        }

        .tbl {
            padding: 5px;
        }
    }
}

.selected-table {
    position: relative;

    & > div {
        border-left: 1px solid #eee;
        width: 40px;

        text-align: center;
        line-height: 40px;
        font-size: 18px;
        color: #ccc;
    }

    .edit {
        position: absolute;
        right: 80px;
        left: auto;
        cursor: pointer;

        &:hover {
            background-color: #eee;
            color: blueviolet;
        }
    }

    .close {
        position: absolute;
        right: 40px;
        left: auto;
        cursor: pointer;

        &:hover {
            background-color: #eee;
            color: blueviolet;
        }
    }

    .drag-handle {
        position: absolute;
        right: 0px;
        left: auto;
        cursor: move;
    }
}
.drawer_area {
    .container {
        display: flex;
        justify-content: space-between;
        .left-main {
            flex-grow: 1;
            width: auto;
            max-width: calc((100% - 100px) / 2);
            height: 100%;
        }

        .aside {
            height: 100%;
            width: 100px;
            border-left: 1px solid #eee;
            border-right: 1px solid #eee;

            display: flex;
            align-items: center;
            justify-content: center;
        }

        .right-main {
            flex-grow: 1;
            width: auto;

            .selected {
                .list {
                    padding: 5px;
                }
            }
        }

        .adjust_fields,
        .selected {
            height: 100%;
        }

        .title {
            height: $handle-height;
            line-height: $handle-height;
            border-bottom: 1px solid #eee;
            padding-left: 10px;
            font-size: 16px;
        }

        .list {
            height: calc(100% - #{$handle-height});
            overflow: auto;
        }
    }
}

// 字段调整

// 拖动样式
.drag-list {
    display: block;
    background: white;
    border: 2px solid #ccc;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    overflow: hidden;
}

.drag-item {
    padding: 10px 0 10px 10px;
    border-top: solid 1px #ccc;
    border-bottom: solid 1px #ccc;
    color: rgba(0, 0, 0, 0.87);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    background-color: white;
    font-size: 14px;
}

.cdk-drag-preview {
    box-sizing: border-box;
    box-shadow: 0 5px 5px -3px rgba(0, 0, 0, 0.2), 0 8px 10px 1px rgba(0, 0, 0, 0.14),
        0 3px 14px 2px rgba(0, 0, 0, 0.12);
}

.cdk-drag-placeholder {
    opacity: 0;
}

.cdk-drag-animating {
    transition: transform 250ms cubic-bezier(0, 0, 0.2, 1);
}

.cdk-drop-list-dragging {
    & :not(.cdk-drag-placeholder) {
        transition: transform 250ms cubic-bezier(0, 0, 0.2, 1);
    }
}
