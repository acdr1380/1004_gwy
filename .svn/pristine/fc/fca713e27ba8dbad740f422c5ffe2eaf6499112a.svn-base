@import 'src/app/styles/layout';
@import 'src/app/styles/drawer';

.audit_list {
    $item-height: 40px;

    width: 100%;

    .item {
        height: $item-height;
        line-height: $item-height;
        border-bottom: 1px solid #eee;

        display: flex;
        align-items: center;

        &:before {
            content: '';
            display: inline-block;
            width: 3px;
            height: $item-height;
        }
        &:hover {
            color: #1890ff;
        }

        &.active {
            background-color: #e6f7ff;

            &:before {
                background-color: #1890ff;
            }
        }

        & > .icon {
            width: 30px;
            padding: 0 10px;
        }

        & > .title {
            flex: 1;
            cursor: pointer;
            padding: 0 10px;
        }

        & > .btns {
            .btn {
                padding: 0 10px;
                // border-left: 1px solid #eee;
                color: #40a9ff;
                cursor: pointer;
            }
        }
    }

    & .fa {
        margin-right: 5px;
    }

    & .fa.error {
        color: #1890ff;
    }

    & .fa.succeed {
        color: #52c41a;
    }

    & .fa.stateless {
        color: #1890ff;
    }
}

.tbl {
    padding: 10px;

    td {
        input {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            width: 100%;
            margin: auto;
            border: none;
            // padding: 0 8px;
        }
    }
}

.edit_tbl {
    tr {
        th,
        td {
            padding: 8px 0px !important;
        }
        td {
            background-color: #f5f5f5;
        }
        td.edit {
            position: relative;
            background-color: #fff;
            padding: 0 8px !important;
            input {
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                width: 100%;
                margin: auto;
                border: none;
                // padding: 0 8px;
            }
        }
    }
}

:host ::ng-deep {
    .ant-table {
        .col_width_format {
            visibility: collapse;
        }
        tr {
            th,
            td {
                padding: 8px 0px !important;
            }
        }
        .ant-table-tbody {
            tr {
                th {
                    padding: 8px 0px !important;
                }
                td {
                    background-color: #f5f5f5;
                }
                td.edit {
                    position: relative;
                    padding: 0 !important;
                    background-color: #fff;
                }
            }
        }
    }
}

.view_mid {
    height: 1%;
    background-color: #f1f2f2;
}

.spin {
    height: 100%;
    overflow: auto;
}

:host ::ng-deep {
    nz-spin {
        .ant-spin-container {
            height: 100% !important;
        }
    }
}

.custom_table {
    table-layout: fixed;
    width: 100%;
    border: 1px solid #e8e8e8;

    &.readly {
        td {
            background-color: #fafafa;
        }
    }
    tr {
        border-bottom: 1px solid #e8e8e8;

        td,
        th {
            // padding: 12px 24px;
            padding: 8px 10px;
            text-align: left;
            border-right: 1px solid #e8e8e8;
        }

        td.value_readly {
            cursor: pointer;
            background-color: #f5f5f5;
        }

        td.sort_value {
            cursor: pointer;
        }

        .label {
            background-color: #fafafa;
            color: #000;
            font-weight: bold;
        }

        .value {
            position: relative;

            input {
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                width: 100%;
                margin: auto;
                border: none;
                padding: 0 10px;
            }
        }
    }
}

.view_table {
    padding: 10px;
}

.disable_input {
    background-color: #f0f0f0;
}

.tabset_header {
    position: relative;
    & > div {
        display: inline-block;
    }

    .tabset_extra {
        position: absolute;
        margin-left: 10px;
        // margin-top: 7px;

        .arrows {
            font-size: 18px;
            cursor: pointer;
            display: inline;
            margin-right: 15px;
            & > i {
                font-size: 20px;
                color: #767676;
                &:hover {
                    color: #1890ff;
                }
            }
        }
    }
}

.full_screen {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    z-index: 99;
}

.pagination {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
