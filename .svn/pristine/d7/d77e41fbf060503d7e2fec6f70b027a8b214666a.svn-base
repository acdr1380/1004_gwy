@import "src/app/styles/layout";
@import "src/app/styles/drawer";

// 人员列表
.self_left {
    width: 220px !important;
}
.audit_list {
    $item-height: 40px;
    width: 100%;

    .item {
        height: $item-height;
        line-height: $item-height;
        border-bottom: 1px solid #eee;

        display: flex;
        align-items: center;

        &:before {
            content: "";
            display: inline-block;
            width: 3px;
            height: $item-height;
        }
        &:hover {
            color: #1890ff;
        }

        &.active {
            background-color: #e6f7ff;

            &:before {
                background-color: #1890ff;
            }
        }

        & > .icon {
            width: 30px;
            padding: 0 10px;

            & .fa {
                margin-right: 5px;
            }

            & .fa.error {
                color: #ff4d4f;
            }

            & .fa.succeed {
                color: #52c41a;
            }

            & .fa.stateless {
                color: #1890ff;
            }
        }

        & > .title {
            flex: 1;
            cursor: pointer;
            padding: 0 10px;
            height: $item-height;
        }

        & > .btns {
            .btn {
                padding: 4px 10px 0 10px;
                color: #40a9ff;
                cursor: pointer;
                .opreate_icon {
                    // font-size: 17px;
                    cursor: pointer;
                    color: #828282;

                    &:hover {
                        color: #1890ff;
                    }
                }
            }
        }
    }
}

.batch_audit {
    text-align: right;
    margin: 0 10px;
    width: 100%;
    & > button {
        width: 100%;
    }
}

.form_lyt {
    height: 100%;
    width: 100%;
    position: relative;

    .btns {
        width: 100%;
        height: 50px;
        position: absolute;
        background-color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        // right: 20px;
        bottom: 10px;
        margin: auto;
    }
}

.person_audit_list {
    color: #000;

    .item {
        padding-bottom: 10px;
        margin-bottom: 10px;
        border-bottom: 1px solid #eee;

        .a_info {
            span {
                margin-right: 10px;
            }
        }
    }
}

.page_view {
    position: relative;

    .right_hang {
        position: absolute;
        top: 0;
        right: 10px;
        height: auto;
        z-index: 88;

        .btn {
            width: 55px;
            padding: 5px 0;
            border: 1px solid #ececec;
            border-bottom: none;
            text-align: center;
            font-size: 14px;
            cursor: pointer;

            &:first-child {
                border-top: none;
            }
            &:last-child {
                border-bottom: 1px solid #ececec;
            }
            i {
                font-size: 18px;
            }
            &:hover {
                color: #1890ff;
            }
        }
    }
}

.full_screen {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    z-index: 99;
}

.form_list_tab {
    display: inline-block;
}
