@import 'src/app/styles/drawer';

.drawer_area{
    .container{
        padding: 10px;
    }
}

.file-list{
    display: flex;
    flex-direction: column;

    width: 100%;
    height: 100%;
    & > .file-item{
        flex: 1;
        display: flex;
        flex-direction: column;
        & > .file-item-title{
            height: 36px;
            line-height: 36px;
            padding: 0 10px;
            font-size: 15px;
            font-weight: bold;
        }

        & > .file-item-content {
            padding: 0 10px;
            flex: 1;
        }
    }

}