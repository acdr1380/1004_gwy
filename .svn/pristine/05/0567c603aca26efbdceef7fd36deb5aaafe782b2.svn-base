@import 'src/app/styles/_layout';
@import 'src/app/styles/_drawer';

[nz-icon] {
    opacity: 0.3;
}

.header {
    .header_tabs {
        display: inline-block;
    }
    .header_btn {
        background-color: #40a9ff1a;
        border: 1px dashed rgba(64, 169, 255, 0.4);
        padding: 0 10px;
        button {
            margin-right: 10px;
            border-radius: 4px;
        }
    }
}

.header_padding {
    padding: 0 !important;
}

button {
    border-radius: 4px;
}

.content {
    padding: 0 10px;
    overflow-x: hidden;
    margin-top: 1px;
    .title {
        height: 50px;
        line-height: 50px;
    }
    .content_divider {
        margin-bottom: 0;
        margin-top: 10px;
    }
    .form_divider {
        margin-bottom: 0;
        margin-top: 0;
    }
    .calculate {
        position: relative;
        height: 40px;
        .calculate_start {
            position: absolute;
            background-color: #f0f2f5;
            left: -12px;
            right: -12px;
            padding: 7px 19px;
            button {
                margin-right: 10px;
            }
        }
    }
    .left_btn {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }
    .right_btn {
        border-top-right-radius: 4px;
        border-bottom-right-radius: 4px;
    }
    .btn_group {
        margin-bottom: 15px;
    }
}

.form_scroll {
    overflow: hidden;
    overflow-x: scroll;
}

.flex_wrap {
    display: flex;
    flex-wrap: wrap;
}

.padding_right {
    padding-right: 20px;
}

.padding_top {
    padding-top: 15px;
}

.display_inlineb {
    display: inline-block;
}

.identity_item {
    width: 300px;
}

.workInfo {
    min-width: 1100px;
    .date_tail {
        display: inline-block;
        line-height: 32px;
        padding-left: 8px;
    }
    .label_left {
        width: 130px;
        text-align: left;
    }
    .label_padding {
        & > div {
            padding-right: 20px;
        }
    }
    & > div {
        height: 40px;
    }
}

.drawer_search {
    width: 300px;
}

.card {
    border: 1px solid #ccc;
    margin: 27px 0;
    .title {
        padding: 10px;
    }
    .card_content {
        padding: 10px;
        border-top: 1px solid #ccc;
    }
}

.result_table {
    position: relative;
    .fullscreen_ico {
        position: absolute;
        color: #1890ff;
        cursor: pointer;
        right: 8px;
        top: -24px;
        z-index: 100;
        i {
            opacity: 1;
        }
    }
}

.fullscreen {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 99;
    background: #fff;
    padding-top: 10px;
    padding-left: 10px;
    padding-right: 10px;
}

.tab_width {
    width: 100%;
}

.loading {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 100;
}

.prompt_message {
    font-size: 12px;
    i {
        color: #1890ff;
        opacity: 1;
        margin: 0 6px;
    }
}

.message_right {
    float: right;
}

.header_btn_step {
    width: 580px;
    line-height: 20px;
    height: 50px;
    padding-top: 4px;
}

.header_step {
    padding: 0 10px;
}

.first_step {
    width: 170px !important;
    padding: 0 10px;
    margin: 10px 0;
}

.second_step {
    width: 170px !important;
    padding: 0 10px;
}

.third_step {
    height: 50px;
    line-height: 50px;
}

.mr10 {
    margin-right: 10px;
}
