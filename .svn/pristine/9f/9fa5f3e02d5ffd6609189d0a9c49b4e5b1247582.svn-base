<div class="layout">
    <!-- 查询条件 -->
    <div class="query_condition q_item">
        <!-- 查询框 -->
        <!-- <div class="q_putt">
            <nz-input-group nzSearch [nzAddOnAfter]="suffixButton">
                <input
                    type="text"
                    nz-input
                    placeholder="请输入关键内容查询"
                    [(ngModel)]="queryKey"
                    (keydown)="eventKeyDown($event)"
                />
            </nz-input-group>
            <ng-template #suffixButton>
                <button nz-button nzType="primary" nzSearch (click)="staffSearch()">解析</button>
            </ng-template>
        </div> -->

        <!-- 查询条件 -->
        <div class="condition">
            <ng-container *ngFor="let field of queryTable.conditionFieldIds">
                <div class="c_item">
                    <div class="text-del">
                        <button
                            nz-button
                            nzType="link"
                            (click)="selectorFieldsIfy.delFields(field)"
                        >
                            删除
                        </button>
                    </div>
                    <div class="title">
                        <label nz-checkbox [(ngModel)]="field.selectedQuery">{{
                            field.TABLE_COLUMN_NAME
                        }}</label>
                    </div>
                    <div class="scope">
                        <nz-input-group nzCompact>
                            <nz-select
                                style="width: 120px"
                                [(ngModel)]="field.operator"
                                nzPlaceHolder="查询关系"
                            >
                                <ng-container *ngFor="let item of operatorEnumList">
                                    <nz-option
                                        [nzLabel]="item.text"
                                        [nzValue]="item.value"
                                    ></nz-option>
                                </ng-container>
                            </nz-select>

                            <ng-container *ngIf="field.operator !== operatorEnum.BETWEEN">
                                <ng-container *ngIf="field.TABLE_COLUMN_DICTIONARY_CODE">
                                    <!-- <gl-dictionary-multiple-input
                                        [code]="field.TABLE_COLUMN_DICTIONARY_CODE"
                                        [(ngModel)]="field.query"
                                        [(text)]="field.itemCodeText"
                                    ></gl-dictionary-multiple-input> -->
                                </ng-container>

                                <ng-container *ngIf="field.TABLE_COLUMN_TYPE === 4">
                                    <nz-date-picker
                                        [(ngModel)]="field.value"
                                        [style.width.px]="200"
                                    ></nz-date-picker>
                                </ng-container>

                                <ng-container
                                    *ngIf="
                                        field.TABLE_COLUMN_TYPE === 2 &&
                                        !field.TABLE_COLUMN_DICTIONARY_CODE
                                    "
                                >
                                    <input
                                        nz-input
                                        [(ngModel)]="field.value"
                                        style="width: auto"
                                        placeholder="请填写"
                                    />
                                </ng-container>

                                <ng-container *ngIf="field.TABLE_COLUMN_TYPE === 3">
                                    <nz-input-number
                                        [(ngModel)]="field.value"
                                        nzPlaceHolder="请填写"
                                    ></nz-input-number>
                                </ng-container>
                            </ng-container>

                            <ng-container *ngIf="field.operator === operatorEnum.BETWEEN">
                                <ng-container
                                    *ngIf="
                                        field.TABLE_COLUMN_TYPE === 2 &&
                                        !field.TABLE_COLUMN_DICTIONARY_CODE
                                    "
                                >
                                    <input
                                        type="text"
                                        [(ngModel)]="field.value"
                                        nz-input
                                        placeholder="开始值"
                                        style="width: 100px; text-align: center"
                                    />
                                    <input
                                        type="text"
                                        disabled
                                        nz-input
                                        placeholder="~"
                                        style="
                                            width: 30px;
                                            border-left: 0px;
                                            pointer-events: none;
                                            background-color: rgb(255, 255, 255);
                                        "
                                    />
                                    <input
                                        type="text"
                                        [(ngModel)]="field.value2"
                                        nz-input
                                        placeholder="结束值"
                                        style="width: 100px; text-align: center; border-left: 0px"
                                    />
                                </ng-container>

                                <ng-container *ngIf="field.TABLE_COLUMN_TYPE === 4">
                                    <nz-range-picker
                                        style="width: 420px"
                                        [(ngModel)]="field.rangePicker"
                                        (ngModelChange)="evtDateBetweenChange($event, field)"
                                    ></nz-range-picker>
                                </ng-container>
                            </ng-container>
                        </nz-input-group>
                    </div>
                </div>
            </ng-container>
            <div class="c_item">
                <div class="title">增加条件</div>
                <div class="scope">
                    <button nz-button nzType="link" class="link" (click)="evtSelectorFields()">
                        选择字段
                    </button>
                    <button
                        nz-button
                        nzType="link"
                        class="link"
                        (click)="existCondition.evtHaveExist()"
                    >
                        已存条件
                    </button>
                </div>
            </div>
        </div>

        <!-- 查询按钮 -->
        <div class="query_btn">
            <div class="placeholder"></div>
            <div class="btns">
                <nz-button-group>
                    <button nz-button nzType="primary" (click)="queryStart(true)">查询</button>
                    <button nz-button nzType="default" (click)="saveCondition.save()">
                        保存条件
                    </button>
                </nz-button-group>
            </div>
        </div>
    </div>

    <!-- 查询已选条件 -->
    <div class="query_result_condition q_item">
        <div class="title">查询选择条件：</div>
        <div class="query_condition">
            <ng-container *ngFor="let field of queryTable.conditionFieldIds">
                <div class="item" *ngIf="field.selectedQuery">
                    {{ field.TABLE_COLUMN_NAME }}:
                    {{ transOperatorEnumEN(field.operator) }}
                    <ng-container *ngIf="field.operator !== operatorEnum.BETWEEN">
                        <ng-container [ngSwitch]="field.TABLE_COLUMN_TYPE">
                            <ng-template [ngSwitchCase]="4">
                                {{ field.value | date: 'yyyy-MM-dd' }}
                            </ng-template>
                            <ng-container *ngIf="!!field.TABLE_COLUMN_DICTIONARY_CODE">
                                <ng-template [ngSwitchCase]="2">
                                    {{ field.itemCodeText }}
                                </ng-template>
                            </ng-container>
                            <ng-container *ngIf="!field.TABLE_COLUMN_DICTIONARY_CODE">
                                <ng-template ngSwitchDefault>
                                    {{ field.value }}
                                </ng-template>
                            </ng-container>
                        </ng-container>
                    </ng-container>

                    <ng-container *ngIf="field.operator === operatorEnum.BETWEEN">
                        <ng-container [ngSwitch]="field.TABLE_COLUMN_TYPE">
                            <ng-template [ngSwitchCase]="4">
                                {{ field.value | date: 'yyyy-MM-dd' }}~{{
                                    field.value2 | date: 'yyyy-MM-dd'
                                }}
                            </ng-template>
                            <ng-template [ngSwitchCase]="2">
                                {{ field.value }}~{{ field.value2 }}
                            </ng-template>
                        </ng-container>
                    </ng-container>
                    <div class="close" (click)="queryTable.deleteQueryCondition(field)">x</div>
                </div>
            </ng-container>
        </div>
    </div>

    <!-- 查询匹配结果 -->
    <div class="query_table q_item">
        <div class="handle">
            <div>
                查询结果:共有<span style="color: red">{{ queryTable.totalCount }}</span
                >条满足条件的记录
            </div>
            <div>
                <!-- <nz-checkbox-group
                    [(ngModel)]="checkOptionsOne"
                    (ngModelChange)="NewOrOldData()"
                ></nz-checkbox-group> -->
                <nz-radio-group
                    [(ngModel)]="oldAndNewData.isNewOrOldStatus"
                    style="margin-right: 10px"
                    (ngModelChange)="oldAndNewData.NewOrOldData()"
                >
                    <ng-container *ngFor="let item of oldAndNewData.checkOptionsOne">
                        <label nz-radio-button [nzValue]="item.value">{{ item.label }}</label>
                    </ng-container>
                </nz-radio-group>
                <nz-button-group>
                    <button nz-button nzType="primary" (click)="customDisplay()">定制显示</button>
                    <button nz-button nzType="primary" (click)="downLoadFile()">输出</button>
                </nz-button-group>
            </div>
        </div>
        <div class="tbl">
            <nz-table
                #basicTable
                [nzData]="queryTable.data"
                nzShowSizeChanger
                nzBordered
                nzSize="small"
                [nzFrontPagination]="false"
                [nzTotal]="queryTable.totalCount"
                [(nzPageSize)]="queryTable.pageSize"
                [(nzPageIndex)]="queryTable.pageIndex"
                [nzPageSizeOptions]="[5, 10, 20, 50]"
                (nzPageIndexChange)="queryStart()"
                (nzPageSizeChange)="queryStart(true)"
                [nzLoading]="queryTable.nzLoading"
            >
                <thead>
                    <tr>
                        <ng-container *ngFor="let field of queryTable.Fields">
                            <th [nzWidth]="field.SCHEME_HEADER_DISPLAY_WIDTH + 'px'">
                                {{ field.TABLE_COLUMN_NAME }}
                            </th>
                        </ng-container>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of basicTable.data">
                        <ng-container *ngFor="let field of queryTable.Fields">
                            <td *ngIf="oldAndNewData.isNewOrOldStatus === 0">
                                {{
                                    field.TABLE_COLUMN_DICTIONARY_CODE
                                        ? data[field.TABLE_COLUMN_CODE + '_CN']
                                        : field.TABLE_COLUMN_TYPE !== 4
                                        ? data[field.TABLE_COLUMN_CODE]
                                        : (data[field.TABLE_COLUMN_CODE] | date: 'yyyy-MM-dd')
                                }}
                            </td>
                            <ng-container *ngIf="oldAndNewData.isNewOrOldStatus === 1">
                                <td
                                    *ngIf="!data.isHide || field.tableId !== 'A01'"
                                    [rowSpan]="field.tableId !== 'A01' ? 1 : data.rowSpan"
                                >
                                    {{
                                        field.TABLE_COLUMN_DICTIONARY_CODE
                                            ? data[field.TABLE_COLUMN_CODE + '_CN']
                                            : field.TABLE_COLUMN_TYPE !== 4
                                            ? data[field.TABLE_COLUMN_CODE]
                                            : (data[field.TABLE_COLUMN_CODE] | date: 'yyyy-MM-dd')
                                    }}
                                </td>
                            </ng-container>
                        </ng-container>
                    </tr>
                </tbody>
            </nz-table>
        </div>
    </div>
</div>

<!-- 显示字段调整 -->
<nz-drawer
    [nzVisible]="fieldsAdjust.visible"
    nzPlacement="right"
    [nzTitle]="fieldsAdjust.title"
    [nzWidth]="fieldsAdjust.width"
    (nzOnClose)="fieldsAdjust.close()"
>
    <div class="drawer_area">
        <div class="header">
            <nz-button-group>
                <button nz-button nzType="primary" (click)="fieldsAdjust.save()">完成调整</button>
                <button nz-button nzType="default" (click)="fieldsAdjust.close()">关闭</button>
            </nz-button-group>
        </div>
        <div class="container">
            <main class="left-main">
                <div class="adjust_fields">
                    <div class="title">备选指标</div>
                    <div class="list">
                        <nz-tree
                            #typeTreeElement
                            [nzData]="fieldsAdjust.alternativeTree.nodes"
                            (nzClick)="fieldsAdjust.alternativeTree.evtActiveNode($event)"
                            (nzDblClick)="fieldsAdjust.alternativeTree.evtDblActiveNode($event)"
                            [nzTreeTemplate]="nzTreeTemplate"
                        >
                            <ng-template #nzTreeTemplate let-node>
                                <span
                                    class="custom-node"
                                    [class.active]="
                                        fieldsAdjust.alternativeTree.activedNode?.key === node.key
                                    "
                                >
                                    <i
                                        class="fa fa-{{
                                            fieldsAdjust.alternativeTree.icons[
                                                node.origin?.nodeType
                                            ]
                                        }}"
                                        aria-hidden="true"
                                    ></i>
                                    <span class="node-text">{{ node.title }}</span>
                                </span>
                            </ng-template>
                        </nz-tree>
                    </div>
                </div>
            </main>
            <aside class="aside">
                <button nz-button nzType="primary" (click)="fieldsAdjust.evtChoose()">选择</button>
            </aside>
            <main class="right-main">
                <div class="selected">
                    <div class="title">已选指标</div>
                    <div class="list" *ngIf="fieldsAdjust.selectedIfy.list.length > 0">
                        <div
                            cdkDropList
                            class="drag-list"
                            (cdkDropListDropped)="fieldsAdjust.selectedIfy.drop($event)"
                        >
                            <div
                                class="drag-item selected-table"
                                *ngFor="let item of fieldsAdjust.selectedIfy.list; let i = index"
                                cdkDragLockAxis="y"
                                cdkDrag
                            >
                                {{ item.TABLE_COLUMN_NAME }}
                                <ng-container
                                    *ngIf="
                                        fieldsAdjust.selectedIfy.defaultFilelds.indexOf(
                                            item.TABLE_COLUMN_CODE
                                        ) === -1
                                    "
                                >
                                    <div
                                        class="close position_0"
                                        title="撤选"
                                        (click)="fieldsAdjust.selectedIfy.delete(item, i)"
                                    >
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    </div>
                                    <div class="drag-handle position_0" cdkDragHandle>
                                        <i class="fa fa-arrows" aria-hidden="true"></i>
                                    </div>
                                </ng-container>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <!-- </div> -->
        </div>
    </div>
</nz-drawer>

<!-- 添加-选择字段 -->
<nz-drawer
    [nzVisible]="selectorFieldsIfy.visible"
    nzPlacement="right"
    [nzTitle]="selectorFieldsIfy.title"
    [nzWidth]="selectorFieldsIfy.width"
    (nzOnClose)="selectorFieldsIfy.close()"
>
    <div class="drawer_area">
        <div class="header">
            <nz-select
                nzAllowClear
                nzShowSearch
                nzServerSearch
                [nzShowArrow]="false"
                nzPlaceHolder="输入查询关键字"
                [ngStyle]="{ width: '100%' }"
                [(ngModel)]="selectorFieldsIfy.find.keyword"
                (nzOpenChange)="selectorFieldsIfy.find.evtOpenChange()"
                (nzOnSearch)="selectorFieldsIfy.find.evtOnSearch($event)"
                (ngModelChange)="selectorFieldsIfy.find.evtChange()"
            >
                <ng-container *ngFor="let item of selectorFieldsIfy.find.list">
                    <nz-option [nzValue]="item.value" [nzLabel]="item.label"></nz-option>
                </ng-container>
            </nz-select>
        </div>
        <div class="container">
            <nz-tree
                #conditionFieldsTree
                nzCheckable
                [nzData]="selectorFieldsIfy.tree.nodes"
                (nzClick)="selectorFieldsIfy.tree.evtActiveNode($event)"
                [nzTreeTemplate]="nzConditionTreeTemplate"
            >
                <ng-template #nzConditionTreeTemplate let-node>
                    <span
                        class="custom-node"
                        [class.active]="selectorFieldsIfy.tree.activedNode?.key === node.key"
                    >
                        <i
                            class="fa fa-{{ selectorFieldsIfy.tree.icons[node.origin?.nodeType] }}"
                            aria-hidden="true"
                        ></i>
                        <span class="node-text">{{ node.title }}</span>
                    </span>
                </ng-template>
            </nz-tree>
        </div>
        <div class="footer">
            <nz-button-group>
                <button nz-button nzType="primary" (click)="selectorFieldsIfy.evtSelected()">
                    选择
                </button>
            </nz-button-group>
        </div>
    </div>
</nz-drawer>
<!-- 已存条件 -->
<nz-drawer
    [nzClosable]="true"
    [nzVisible]="existCondition.visible"
    nzPlacement="right"
    [nzWidth]="500"
    nzTitle="已存条件"
    (nzOnClose)="existCondition.close()"
>
    <nz-table #exist [nzData]="existCondition.tableData" nzSize="small" nzBordered>
        <thead>
            <tr>
                <th>名称</th>
                <th>保存时间</th>
                <th [nzAlign]="'center'">操作</th>
            </tr>
        </thead>
        <tbody>
            <tr *ngFor="let data of exist.data">
                <td>{{ data.QUERY_HISTORY_NAME }}</td>
                <td>{{ data.QUERY_HISTORY_TIME | date: 'yyyy-MM-dd' }}</td>
                <td [nzAlign]="'center'">
                    <a (click)="existCondition.query(data)">查看 </a>
                    <nz-divider nzType="vertical"></nz-divider>
                    <a
                        nz-popconfirm
                        nzTitle="确认要删除此条件吗?"
                        (nzOnConfirm)="existCondition.deleteCondition(data)"
                        nzPlacement="topLeft"
                    >
                        删除</a
                    >
                </td>
            </tr>
        </tbody>
    </nz-table>
</nz-drawer>
<!-- 保存条件 -->
<nz-drawer
    [nzClosable]="true"
    [nzVisible]="saveCondition.visible"
    nzPlacement="right"
    [nzWidth]="500"
    nzTitle="保存条件"
    (nzOnClose)="saveCondition.close()"
>
    <div class="drawer_area">
        <div class="container">
            <form nz-form [formGroup]="saveCondition.form" style="width: 100%">
                <nz-form-item>
                    <nz-form-label nzRequired>保存条件</nz-form-label>
                    <nz-form-control>
                        <input formControlName="name" nz-input placeholder="请输入条件名称" />
                    </nz-form-control>
                </nz-form-item>
            </form>
        </div>
        <div class="footer">
            <button nz-button nzType="primary" (click)="saveCondition.saveCondition()">确认</button>
        </div>
    </div>
</nz-drawer>
