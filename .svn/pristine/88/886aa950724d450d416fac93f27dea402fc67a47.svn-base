.lyt_doc {
    position: absolute;
    top: 50px;
    bottom: 50px;
    left: 100px;
    right: 100px;
    margin: auto;

    background-color: #585858;

    .close {
        position: absolute;
        right: -15px;
        top: -15px;
        margin-left: 0;

        height: 30px;
        width: 30px;
        cursor: pointer;
        background: url('assets/images/icon.png') no-repeat;

        background-position: -149px -31px;

        &:hover {
            background-position: -180px -31px;
        }
    }

    .file_view {
        height: 100%;
        width: 100%;

        .item {
            height: 100%;
            width: 100%;
            /*flex 布局*/
            display: flex;
            /*实现垂直居中*/
            align-items: center;
            /*实现水平居中*/
            justify-content: center;
            overflow: hidden;

            img {
                max-width: 100%;
                max-height: 100%;
            }
        }
    }

    .footer {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;

        /*flex 布局*/
        display: flex;
        /*实现水平居中*/
        justify-content: center;

        .operation {
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
            display: inline-block;
            background-color: rgba(0, 0, 0, 0.5);

            .item {
                width: 40px;
                height: 40px;
                float: left;

                /*flex 布局*/
                display: flex;
                /*实现垂直居中*/
                align-items: center;
                /*实现水平居中*/
                justify-content: center;

                color: #ccc;

                cursor: pointer;

                &:hover {
                    color: #fff;
                }
            }
        }
    }
}

.error {
    color: #fff;
}
