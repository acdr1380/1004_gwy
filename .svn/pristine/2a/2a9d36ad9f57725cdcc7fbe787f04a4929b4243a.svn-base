/*导入布局样式*/
@import 'src/app/styles/_layout';
@import 'src/app/styles/_drawer';

.person_other_info {
    width: 450px !important;

    .view_scroll {
        padding: 10px;
    }
}

.person_field_tbl {
    table-layout: auto;
    width: 100%;
    border: 1px solid #e8e8e8;

    tr {
        border-bottom: 1px solid #e8e8e8;
        height: 45px;
        line-height: 45px;

        td {
            padding: 0 20px !important;
            height: 45px;
            line-height: 45px;
            width: 180px;
            border-right: 1px solid #e8e8e8;
            position: relative;

            &.title {
                background-color: #fafafa;
                width: 150px;
                text-align: right;
            }
            &.value {
                text-align: left;
            }
        }
    }
}
