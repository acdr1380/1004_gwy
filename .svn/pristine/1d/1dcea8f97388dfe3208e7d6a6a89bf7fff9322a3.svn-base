@import 'src/app/styles/layout';
@import 'src/app/styles/drawer';
.tbl {
    padding: 10px;

    td {
        input {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            width: 100%;
            margin: auto;
            border: none;
            // padding: 0 8px;
        }
        &.edit {
            background-color: #fff;
            cursor: pointer;
        }
    }
}

:host ::ng-deep {
    .ant-table {
        .col_width_format {
            visibility: collapse;
        }
        tr {
            th,
            td {
                padding: 8px 0px !important;
            }
        }
        .ant-table-tbody {
            tr {
                th {
                    padding: 8px 0px !important;
                }
                td {
                    background-color: #f5f5f5;
                }
                td.edit {
                    position: relative;
                    padding: 0 !important;
                }
                td.code-input {
                    input {
                        border: 0 !important;
                    }
                }
            }
        }
    }
}
.code-input {
    background-color: #fff !important;
}
.add-retire {
    position: relative;
    padding: 0 !important;
    input {
        border: 0 !important;
    }
}
::ng-deep {
    .edit {
        dictionary-input {
            input {
                border: none !important;
            }
        }
    }
}
