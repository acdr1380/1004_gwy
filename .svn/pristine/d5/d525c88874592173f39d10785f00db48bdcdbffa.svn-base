/*导入布局样式*/
@import 'src/app/styles/layout';
@import 'src/app/styles/drawer';
.content-inf {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    overflow: auto;
    padding: 0 10px;
    .grid_item {
        border-top: 1px solid rgb(240, 242, 245);
        width: calc(90% / 3);
        // padding: 10px;
        transition: all 0.5s;
        -moz-transition: all 0.5s; /* Firefox 4 */
        -webkit-transition: all 0.5s; /* Safari 和 Chrome */
        -o-transition: all 0.5s; /* Opera */
        overflow: auto;
        max-height: 180px;
        .item_num {
            text-align: right;
        }
    }
    .grid_item:hover {
        background-color: #d1e6ff;
        .item_num {
            color: #4099ff;
        }
    }
}
._tree_view {
    height: 100%;
}
.isSelect {
    justify-content: left !important;
    flex-direction: row-reverse !important;
    padding-right: 25px;
}
.oper_li:hover {
    color: #4099ff;
    cursor: pointer;
}
.chart {
    padding-top: 50px;
    width: 100%;
    height: 100%;
    & > div {
        height: 100%;
    }
}
.right_select {
    width: 200px;
}
