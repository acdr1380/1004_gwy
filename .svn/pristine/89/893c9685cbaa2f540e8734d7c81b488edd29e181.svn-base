@import 'app/styles/layout';
@import 'app/styles/drawer';

// 顶部栏 高度
$header-height: 60px;

// 菜单宽度
$menu-widht: 220px;

// 底色
$main-color: #f0f2f5;

.main_lyt {
    background-color: $main-color;

    & > .header {
        height: $header-height;
        line-height: $header-height;
        // background: linear-gradient(to right, #1890ff, #497cfc);
        // background-color: #0444ad;
        background: url('^assets/images/client/heraderBac.jpg') 0 0;
        color: #fff;
        padding-right: 0px;

        & > div {
            float: left;
        }

        .sidebar-logo {
            img {
                float: left;
                margin-top: 8px;
                width: 45px;
            }
        }

        .project-title {
            padding: 0 10px;

            p {
                margin: 0;
                padding: 0;
            }

            .title {
                // line-height: 40px;

                font-size: 26px;
                // font-weight: bold;
                text-align-last: justify;
            }

            .sub-title {
                // letter-spacing: -1px;
                line-height: 20px;
                margin-top: -5px;
                font-weight: 100px;
                font-size: 12px;
            }
        }

        .header-trigger {
            font-size: 20px;
            height: 40px;
            line-height: 40px;
            width: 40px;
            text-align: center;

            margin-top: 10px;
            margin-left: 10px;
            // background-color: #1a2d3f;

            cursor: pointer;
        }

        .right {
            & > div {
                float: left;
                height: 60px;
                line-height: 60px;
            }

            .core {
                width: 60px;
                text-align: center;
                font-size: 20px;
                position: relative;

                cursor: pointer;

                &::before {
                    content: '';
                    display: block;
                    width: 1px;
                    height: 35px;

                    position: absolute;
                    left: 0;
                    top: 0;
                    bottom: 0;
                    margin: auto;
                    background-image: url('^assets/images/client/line.png');
                    background-color: transparent;
                }

                &:last-child::after {
                    content: '';
                    display: block;
                    width: 1px;
                    height: 35px;

                    position: absolute;
                    left: 0;
                    top: 0;
                    bottom: 0;
                    margin: auto;
                    background-image: url('^assets/images/client/line.png');
                    background-color: transparent;
                }
            }

            .user-unit {
                padding: 0 10px;

                .fa {
                    font-size: 20px;

                    float: left;
                    margin-top: 20px;
                    margin-right: 10px;
                }
            }
        }
    }

    & > .container {
        .left {
            width: $menu-widht;

            .view {
                overflow: hidden;
                overflow-y: auto;
                background-color: #fff;
            }

            &.fold {
                width: 80px;
            }
        }

        .right {
            padding: 10px;

            .header_bread {
                height: 30px;
                line-height: 30px;
                background-color: $main-color;
            }
        }
    }
}

:host ::ng-deep {
    .ant-menu {
        height: 100%;
    }
}
